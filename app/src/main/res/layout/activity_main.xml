<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#BFF6EB"
    android:orientation="vertical"

    tools:context=".MainActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:background="#67EADC"
        android:minHeight="?actionBarSize">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="0dp">

            <ImageView
                android:id="@+id/coinImage"
                android:layout_width="67dp"
                android:layout_height="match_parent"
                android:background="#00000000"
                android:src="@drawable/coinn" />

            <TextView
                android:id="@+id/coinText"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_toRightOf="@id/coinImage"
                android:gravity="center"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:textColor="#EFFB46"
                android:textSize="20sp" />


            <TextView
                android:id="@+id/appname"
                android:layout_width="170dp"
                android:layout_height="80dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="29dp"
                android:fontFamily="@font/amaranth"
                android:text="Kuiz+ "
                android:textAlignment="center"
                android:textColor="#DDA156F4"
                android:textSize="28sp"

                android:textStyle="bold" />

            <ImageView
                android:layout_width="65dp"
                android:layout_height="43dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"

                android:layout_marginTop="-1dp"
                android:layout_marginLeft="100dp"
                android:layout_toLeftOf="@+id/timeText"
                android:layout_toRightOf="@+id/coinImage"
                android:contentDescription="TODO"
                android:src="@drawable/c"
                tools:ignore="NotSibling" />

            <TextView
                android:id="@+id/textviewQcount"
                android:layout_width="45dp"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_marginTop="14dp"
                android:fontFamily="@font/amaranth"
                android:layout_marginRight="26dp"
                android:text="1/76"
                android:textColor="#FFEF5E"
                android:textSize="25dp" />


        </RelativeLayout>

    </androidx.appcompat.widget.Toolbar>

    <View
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:background="#97E9F1"></View>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="280dp"
        android:background="#00000000"
        android:orientation="vertical">

        <TextView
            android:id="@+id/quizeQuestion"
            android:layout_width="match_parent"
            android:layout_height="280dp"
            android:layout_margin="20dp"
            android:fontFamily="@font/amaranth"
            android:gravity="center"
            android:text="@string/questions"
            android:textColor="#9937ED"
            android:textSize="20sp" />


    </LinearLayout>


    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:gravity="center"
    android:orientation="horizontal">
    <TextView
        android:id="@+id/timeText"

        android:layout_width="48dp"
        android:layout_height="40dp"
        android:gravity="center"
        android:text="@string/time"
        android:textColor="#9E27DF"
        android:textSize="35sp"
        />
    <ImageView
        android:layout_width="50dp"
        android:layout_height="40dp"

        android:src="@drawable/timer"

        />
</LinearLayout>

    <LinearLayout
        android:id="@+id/firstRow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/bt1"
            android:layout_width="150dp"
            android:layout_height="80dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="60dp"
            android:background="@drawable/buttom_cos"
            android:lines="2"
            android:onClick="buttonA"
            android:text="Button"
            android:textColor="#F8F6F333"
            android:textSize="18sp"
            android:textStyle="bold" />


        <Button
            android:id="@+id/bt2"
            android:layout_width="150dp"
            android:layout_height="80dp"
            android:background="@drawable/buttom_cos"
            android:lines="2"

            android:onClick="buttonB"
            android:text="Button"
            android:textColor="#F8F6F333"
            android:textSize="18sp"
            android:textStyle="bold" />


    </LinearLayout>










    <LinearLayout
        android:id="@+id/secondRow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/bt3"
            android:layout_width="150dp"
            android:layout_height="80dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="60dp"
            android:background="@drawable/buttom_cos"
            android:lines="2"
            android:onClick="buttonC"
            android:text="Button"
            android:textColor="#F8F6F333"
            android:textSize="18sp"
            android:textStyle="bold" />


        <Button
            android:id="@+id/bt4"
            android:layout_width="150dp"
            android:layout_height="80dp"

            android:background="@drawable/buttom_cos"
            android:lines="2"
            android:onClick="buttonD"
            android:text="Button"
            android:textColor="#F8F6F333"
            android:textSize="18sp"
            android:textStyle="bold" />




    </LinearLayout>
</LinearLayout>