<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".wrongAnswer_play_again"
    android:gravity="center"
    android:background="#C0FFF2"

    android:orientation="vertical">
    <TextView
        android:id="@+id/wrongAnswer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:fontFamily="@font/amaranth"
        android:text="Sorry,Wrong Answer "
        android:textColor="@color/red"

        android:textSize="30sp" />
    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/error" />
    <View
        android:layout_width="match_parent"
        android:layout_height="80dp"></View>
    <TextView
        android:id="@+id/wrongansTextagin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/amaranth"
        android:gravity="center"
        android:text="Play Again?"

        android:textColor="#8328D3"
        android:textSize="30sp" />
    <View
        android:layout_width="match_parent"
        android:layout_height="20dp"></View>
    <Button
        android:id="@+id/playAgainButton"
        android:layout_width="120dp"
        android:layout_height="100dp"
        android:textColor="@color/white"
        android:textSize="55dp"
        android:text="1"
      android:background="@drawable/buttom_cos" />

</LinearLayout>